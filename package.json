  "repository": "https://github.com/jpb06/gapi-oauth-react-hooks.git",
  "author": "jpb06 <jpb.06@outlook.com>",
  "license": "MIT",
  "description": "Some hooks for SSO using Google sign in",
  "dependencies": {},
  "devDependencies": {
    "@testing-library/react-hooks": "^7.0.1",
    "@types/gapi": "^0.0.40",
    "@types/gapi.auth2": "^0.0.55",
    "@types/jest": "^26.0.24",
    "@types/jsdom": "^16.2.13",
    "@types/node": "^16.3.1",
    "@types/react": "^17.0.9",
    "copyfiles": "^2.4.1",
    "del-cli": "^4.0.0",
    "jest": "^27.0.6",
    "jest-coverage-badges": "^1.1.2",
    "jsdom": "^16.6.0",
    "node-jest-badges": "^1.0.20",
    "react": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "copy-package": "copyfiles package.json ./dist/",
    "copy-readme": "copyfiles README.md ./dist/",
    "copy-badges": "copyfiles ./badges/* ./dist/",
    "build": "del-cli ./dist && tsc",
    "postbuild": "yarn copy-package && yarn copy-badges && yarn copy-readme",
    "test": "jest ---watch",
    "test:cov": "jest --coverage --watchAll",
    "test:silentcov": "jest --coverage --silent --runInBand --watchAll=false",
    "test:ci": "jest --runInBand --ci",
    "badges": "generateBadges"
  }
}
